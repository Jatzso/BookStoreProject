@model IEnumerable<BookStoreProject.Models.Venta>

@{
    ViewData["Title"] = "Index";
}

<p class="btnAgregar">
    <a class="btnAbm" asp-action="Create">Agregar nueva venta</a>
</p>

<div class="formBuscador">
    @using (Html.BeginForm())
    {
        <p>
            <input class="buscador" id="cadenaBuscada" name="cadenaBuscada" type="text" value="" placeholder="Venta por libro..." />
            <input class="buscar" type="submit" value="Buscar" />
        </p>
        @if (Model.Count() < 1)
        {
            <p class="notFound">¡Lo sentimos, no se ha encontrado niguna venta!</p>
        }
        else
        {
            <p>Resultados: @Model.Count()</p>
        }
    }
</div>

<table class="table">
    <thead>
        <tr class="columna">
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libro)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provincia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Libro.Titulo)
                </td>
                <td class="dropdown">
                    <button class="dropbtn">Opciones</button>
                    <div class="dropdown-content">
                        <a class="btnAbm" asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                        <a class="btnAbm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

<p class="totales">Cantidad libros vendidos: @ViewBag.TotalVentas</p>
<p class="totales">Venta total: $@ViewBag.TotalVendido</p>

