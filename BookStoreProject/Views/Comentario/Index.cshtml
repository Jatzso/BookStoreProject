@model IEnumerable<BookStoreProject.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() == 0)
            {
                <p id="sinComentarios">Nadie ha comentado este libro aún. ¡Sé el primero!</p>
            }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.User)
            </td>
            @if(User.Identity.IsAuthenticated && User.IsInRole(nameof(Rol.Administrador)))
                {
                <td class="dropdown">
                <button class="dropbtn">Opciones</button>
                <div class="dropdown-content">
                    <a class="btnAbm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
               </td>
                }
            
        </tr>
}
    </tbody>
</table>
