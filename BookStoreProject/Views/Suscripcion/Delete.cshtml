@model BookStoreProject.Models.Suscripcion

@{
    ViewData["Title"] = "Delete";
}

<div class="btnVolver">
    <a class="btnAbm" asp-action="Index">Volver</a>
</div>

<h3 class="tituloEliminar">¿Está seguro que quiere eliminar esta suscripción?</h3>
<div class="eliminar">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btnCreate" />
    </form>
</div>
