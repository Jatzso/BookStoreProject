@model BookStoreProject.Models.Suscripcion

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar suscripción</h1>

<h3>¿Está seguro que quiere eliminar esta suscripción?</h3>
<div>
    <h4>Suscripcion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista de suscripciones</a>
    </form>
</div>
